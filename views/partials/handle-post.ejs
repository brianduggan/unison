<script type="text/x-handlebars-template" id="posts">
  {{#each postings}}
    <div class="handle-post panel panel-default">

      <div class="panel-heading">
        <h4>{{ capitalize game }}</h4>
        <a href="#" class="get-info" data-name="{{game}}"><span class="font-awesome-icon">&#xf05a;</span></a>
      </div>

      <div class="panel-body">
        <div class="row">
        {{#if user_id}}
        <div class="col-md-6">
          <h4>Hosted by: {{capitalize user_id.username}}</h4>
          {{#if locationName}}
            <h4>@ {{capitalize locationName}}</h4>
          {{/if}}
          </div>
          <div class="col-md-6">
          <h5 class="map-location">{{capitalize location}}</h5><a href="#" class='get-location'><i class="fa fa-map-signs"></i></a>
        {{/if}}
        {{#if players}}
          <h5>Players Needed: {{capitalize players}}</h5>
        {{/if}}
          </div>
        </div>
      </div>
      <div class="panel-footer">
        {{#if location}}
        {{/if }}
        {{#if user_id.email}}
          <a href="mailto:{{user_id.email}}?Subject=A%20Unison%20Gamer%20wants%20to%20play%20{{game}}"><span class="font-awesome-icon">&#xf0e0;</span></a>
        {{/if}}
        {{deleteMe this}}
      </div>

      <div class="update-post panel-body">
        {{updateMe this}}
      </div>

    </div>
  {{/each}}
</script>


<script type="text/x-handlebars-template" id="update-profile-template">
  <div class="panel-heading">
    <h3>{{username}}'s Profile</h3>
  </div>
  <div class="panel-body">
    <h5>Birthdate: {{birthdate}}</h5>
    <h5>Favorite Games: {{favoriteGames}}</h5>
    <h5>E-Mail: {{email}}</h5>
    <form class="update-profile-form" data-user-id="{{_id}}">
      <input type="date" name="birthdate" value="{{birthdate}}" placeholder="birthdate">
      <input type="text" name="favoriteGames" value="{{favoriteGames}}" placeholder="Favorite Games">
      <input type="text" name="email" value="{{email}}" placeholder="E-Mail">
      <input type="submit" value="Update Profile">
    </form>
  </div>
</script>
